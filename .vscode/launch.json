    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask app",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/src",
            "env": {
                "FLASK_APP": "main:app",
                "FLASK_ENV": "development",
                "FLASK_RUN_PORT": "5000"
            },
            "args": [
                "run"
            ],
        },
    ]
}